{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "globals": {
    "fetch": true
  },
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "indent": [2, 2],
    "linebreak-style": [2, "unix"],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "no-var": [1],
    "curly": [1],
    "no-console":0,
    "camelcase": [2, {"properties": "always"}],
    "arrow-body-style": [1, "as-needed"]
  }
}
